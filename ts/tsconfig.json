{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowUnusedLabels": false,
    "baseUrl": "./ts/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
